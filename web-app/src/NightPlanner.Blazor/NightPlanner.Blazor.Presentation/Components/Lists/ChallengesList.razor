@using NightPlanner.Blazor.Presentation.Models.Challenges
@using NightPlanner.Blazor.Presentation.Components.Modals.Challenges

<div>
    <Accordion>
        @foreach (var challenge in Challenges)
        {
            <AccordionItem Title="@challenge.Name">
                <Content>
                    @challenge.Description
                    <div>
                        <AddReminderModalForm Challenge="@challenge" OnReminderAdded="OnReminderAdded" />
                    </div>
                </Content>
            </AccordionItem>
        }
    </Accordion>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public required IReadOnlyCollection<ChallengeDto> Challenges { get; set; }

    private async Task OnReminderAdded()
    {
        
    }
}